<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<table> 
    <tr>
        <th>Pokemon</th>
        <th>Level</th>
    </tr>
<% @pokemons.each do | p | %>       
  <tr>
    <td><%= image_tag("pokemon/#{p.ndex}.png", alt: "pokemon") %></td>
    <td><%= p.name %></td>  
    <td><%= p.level %></td> 
    <td><%= p.health %></td>
    <td><%= button_to "Damage Pokemon", damage_path(id: p), :class => "button medium", :method => :patch %></td>
  </tr>
<% end %> 
</table> 